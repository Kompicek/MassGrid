[Unit]
Description=MLGBcoin's distributed currency daemon
After=network.target

[Service]
User=mlgbcoin
Group=mlgbcoin

Type=forking
PIDFile=/var/lib/mlgbcoind/mlgbcoind.pid
ExecStart=/usr/bin/mlgbcoind -daemon -pid=/var/lib/mlgbcoind/mlgbcoind.pid \
-conf=/etc/mlgbcoin/mlgbcoin.conf -datadir=/var/lib/mlgbcoind -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
